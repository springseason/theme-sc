{% comment %}
  Usage:
  {% render 'product-grid-item',
    product: {product object}
    colors: {colors object}
  %}
{% endcomment %}
<a
  href="{{ product.url }}"
  x-data="{ isHovered: false }"
  :class="{ 'hover': isHovered }"
  x-on:mouseover="isHovered = true"
  x-on:mouseout="isHovered = false"
  class="transition-colors duration-300 ease-in-out group"
>
  <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg sm:aspect-h-3 sm:aspect-w-2">
    <img
      width="{{ product.featured_image.width }}"
      height="{{ product.featured_image.height }}"
      src="{{ product.featured_image | image_url: width: 410 }}"
      srcset="{{ product.featured_image | image_url: width: 205 }} 1x, {{ product.featured_image | image_url: width: 410 }} 2x"
      alt="{{ product.featured_image.alt }}"
      class="absolute inset-0 object-cover h-full transform group-hover:scale-[102%] transition-transform duration-500 ease-in-out"
      loading="lazy"
    >
  </div>
  <div class="mt-4 flex items-center justify-between text-base">
    <h3 class="lowercase font-normal">{{ product.title }}</h3>
    <p class="font-extralight">{{ product.price | money }}</p>
    {% if product.compare_at_price_max != blank and product.compare_at_price_max > product.price %}
      <s class="text-[13px] text-gray-700">{{ product.compare_at_price_max | money }}</s>
    {% endif %}
  </div>
  <p class="mt-1 text-sm italic text-gray-500">3 sizes available</p>
</a>

<style>
  .hover {
    color: {{ colors.text }};
  }
</style>
