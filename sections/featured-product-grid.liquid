{% schema %}
{
  "name": "Featured Collection",
  "class": "section-featured-collection",
  "tag": "section",
  "settings": [
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}

<div class="px-6 md:px-8 py-12">
  {% if section.settings.featured_collection != blank %}
    <div class="container">
      <h2 class="mb-12">Featured Product Grid</h2>
      {% assign featured_collection = section.settings.featured_collection %}
      <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
        {% for product in featured_collection.products %}
          {% render 'product-grid-item-2', product: product, colors: settings.color_schemes['default-palette'].settings %}
        {% endfor %}
      </div>
    </div>

    <style>
      .featured-product-grid .pagination-nav .pagination {
        display: flex;
        gap: 10px;
        margin: auto;
        max-width: max-content;
      }
    </style>
  {% endif %}
</div>
