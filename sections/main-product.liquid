{% schema %}
{
  "name": "Product Section",
  "class": "section-main-product",
  "tag": "section",
  "settings": [
    {
      "type": "radio",
      "id": "picker_type",
      "label": "Variant Picker Type",
      "options": [
        {
          "value": "radio",
          "label": "Radio Buttons"
        },
        {
          "value": "select",
          "label": "Select Dropdowns"
        }
      ],
      "default": "radio"
    },
    {
      "type": "select",
      "id": "pdp_type",
      "label": "Select your desired PDP style",
      "default": "pdp-2",
      "options": [
        {
          "value": "pdp-default",
          "label": "Default PDP"
        },
        {
          "value": "pdp-2",
          "label": "PDP 2"
        }
      ]
    }
  ]
}
{% endschema %}

{% assign colors = settings.color_schemes['default-palette'].settings %}
{% liquid
  if section.settings.pdp_type == 'pdp-2'
    render 'pdp-2', colors: colors
  else
    render 'pdp', colors: colors
  endif
%}
